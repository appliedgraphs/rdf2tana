{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "yarn install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "ci": {
      "name": "ci",
      "command": "yarn ci",
      "runAtStart": true
    },
    "format": {
      "name": "format",
      "command": "yarn format",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "yarn lint",
      "runAtStart": false
    },
    "prepare": {
      "name": "prepare",
      "command": "yarn prepare",
      "runAtStart": false
    },
    "build": {
      "name": "build",
      "command": "yarn build",
      "runAtStart": false
    },
    "convert:roam": {
      "name": "convert:roam",
      "command": "yarn convert:roam",
      "runAtStart": false
    },
    "convert:workflowy": {
      "name": "convert:workflowy",
      "command": "yarn convert:workflowy",
      "runAtStart": false
    },
    "test": {
      "name": "test",
      "command": "yarn test",
      "runAtStart": false
    }
  }
}
